@model TreinaWeb.Musicas.Web.ViewModels.Musica.MusicaViewModel

@{
    ViewBag.Title = "Create";
}

<h2 id="titulos">Adicionar Música</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 id="subTitulos">Música</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IdAlbum, "IdAlbum", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.IdAlbum, (SelectList)ViewBag.DropDownAlbuns, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdAlbum, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Adicionar" class="btn btn-default" />
                &nbsp;
                <button id="limparCampos" class="btn btn-danger">Cancelar</button>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Lista de Música", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $("#limparCampos").click(function () {
            $('#Nome').val('');
            $('#IdAlbum').val('');
        });
    </script>
}
